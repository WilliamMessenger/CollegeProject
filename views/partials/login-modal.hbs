<div class="modal fade" id="login-modal" tabindex="-1" aria-labelledby="login-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Login</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="login-form" action="">
          <input id="login-email" type="email" class="form-control my-1" placeholder="Email" required>
          <input id="login-password" type="password" class="form-control my-1" placeholder="Password" required autocomplete="off">
          <div class="d-flex">
            <input id="login-submit" type="submit" class="btn btn-primary mx-0 w-100 mr-1" value="Login">
            <button type="button" class="btn btn-secondary w-100 ml-1" data-bs-dismiss="modal">Cancel</button>
          </div>
        </form>
        <span>Don't have an account? <a id='register-button' href="#">Click Here</a> to register</span>
      </div>
    </div>
  </div>
</div>