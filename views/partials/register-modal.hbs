<div class="modal fade" id="register-modal" tabindex="-1" aria-labelledby="register-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Register</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="register-form" action="">
          <input id="register-firstname" type="text" class="form-control my-1" placeholder="First Name" required>
          <input id="register-lastname" type="text" class="form-control my-1" placeholder="Last Name" required>
          <input id="register-email" type="email" class="form-control my-1" placeholder="Email" required>
          <input id="register-password" type="password" class="form-control my-1" placeholder="Password" required autocomplete="off">
          <div class="d-flex">
            <input id="register-button" type="submit" class="btn btn-primary flex-fill" value="Register">
            <button type="button" class="btn btn-secondary flex-fill ml-1" data-bs-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>